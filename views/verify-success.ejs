<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Email Verification Success</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Tailwind CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <style>
      /* Center the content vertically and horizontally */
      .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }

      /* Styling for the toast notification */
      .toast {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 1000;
        opacity: 0;
        transition: opacity 0.5s ease;
      }

      .toast.show {
        opacity: 1;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <div class="card p-5 shadow-lg rounded-md">
        <div class="text-center">
          <div class="text-green-500">
            <i class="fas fa-check-circle fa-5x"></i>
          </div>
          <h2 class="text-2xl font-bold text-gray-900 mt-4">
            Email Verification Success
          </h2>
          <p class="text-sm text-gray-600 mt-2">
            Your email has been successfully verified.
          </p>
        </div>
        <div class="flex justify-center mt-4">
          <a href="/api/login" class="btn btn-primary">Go to Login</a>
        </div>
      </div>
    </div>

    <!-- Toast notification -->
    <div id="redirectToast" class="toast">
      <div class="toast-body bg-info text-white">
        Redirecting to login page...
      </div>
    </div>

    <script>
      // Function to show the toast notification
      const showRedirectToast = () => {
        const toast = document.getElementById("redirectToast");
        toast.classList.add("show");
      };

      // Function to redirect to login page after 2 or 5 seconds
      const redirectToLogin = () => {
        setTimeout(() => {
          showRedirectToast();
          setTimeout(() => {
            window.location.href = "/api/login";
          }, 2000); // Redirect after 2 seconds
        }, 500); // Show toast after 0.5 seconds
      };

      // Call the function to redirect
      redirectToLogin();
    </script>
  </body>
</html>
